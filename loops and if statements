public static void average(int a, int b) {
        System.out.println((a + b) / 2);
    }

    public static int square(int a) {
        int a2 = a * a;
        return a2;
    }

    public static void age(int year) {
        System.out.println(1402 - year);
    }

    public static boolean canVote(int year) {
        return 1402 - year > 18;
    }

    public static void evenOrOdd(int number) {
        if (number % 2 == 0) {
            System.out.println("even");}
            else System.out.println("odd");
    }
public static void dayOfTheWeek (int number){
        switch (number){
            case 0:
                System.out.println("شنبه");
                break;
            case 1:
                System.out.println("یکشنبه");
                break;
            case 2:
                System.out.println("دوشنبه");
                break;
            case 3:
                System.out.println("سه شنبه");
                break;
            case 4:
                System.out.println("چهارشنبه");
                break;
            case 5:
                System.out.println("پنجشنبه");
                break;
            case 6:
                System.out.println("جعه");
                break;
        }

}
public static int average (int[]numbers){
        int sum= 0;
        for (int i=0; i<numbers.length; i++)
            sum+= numbers[i];
        return sum/numbers.length;
}
public static int fac (int number){
        int sum=1;
        for (int i= number; i>0;  i--)
            sum*=i;
        return sum;
}
}
